{
  "name": "beatwell-api-bun",
  "version": "1.0.50",
  "scripts": {
    "test:e2e": "bun --env-file=.env.test.local test --watch tests/e2e/**.spec.ts",
    "test:unit": "bun --env-file=.env.test.local test --watch src/**.spec.ts",
    "dev": "bun --env-file=.env.local run --watch src/server.ts",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write ./src",
    "db:generate": "bun --bun --env-file=.env.local drizzle-kit generate",
    "db:migrate": "bun --bun --env-file=.env.local drizzle-kit migrate",
    "db:studio": "bun --env-file=.env.local drizzle-kit studio"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.13",
    "@paralleldrive/cuid2": "^3.0.4",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.45.1",
    "elysia": "latest",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.50.1"
  },
  "module": "src/index.js"
}
